@model IEnumerable<WebApp.Models.Product>

@{
    ViewBag.Title = "Home Page";
}





@{

    int d = Model.Count();
    int i;
}

<div class="row">

    @for (i = 1; i < d; i++)
    {
        <div class="films_block col-lg-3 col-md-3 col-sm-3 col-xs-6">
            <a href="single-product.html"><img src="~/images/@Model.ElementAt(@i).Photo" alt="image"></a>

            <div class=" content--center">
                <div class="film_label"><a href="#">@Model.ElementAt(@i).Nom</a></div><hr>
                <div> Ajouter au panier</div>
                <span class="badge badge-pill badge-danger">€&nbsp;@Model.ElementAt(@i).Prix</span>&nbsp;&nbsp;&nbsp;&nbsp;

            </div>
            <div> Ajouter au panier</div>
        </div>

    }
</div>


