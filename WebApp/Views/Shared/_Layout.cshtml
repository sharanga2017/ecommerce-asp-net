@using Microsoft.AspNet.Identity
<!-- header start -->
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <title>@ViewBag.Title - BDD STORE</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Bangers|Cabin+Sketch|Frijole|Monoton|Mountains+of+Christmas|Zhi+Mang+Xing&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/ce7bb58cbb.js" crossorigin="anonymous"></script>

    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet">
    <style>
        .carousel-page {
            width: 100%;
            height: 400px;
            background-color: #5f666d;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container-fluid">

        @*<div class="row">*@
        <div>

            <nav role="navigation" class="navbar navbar-inverse">
                <div class="container">

                    <div class="navbar-header header">

                        <div class="container">

                            <div class="row">

                                <div class="col-lg-12">
                                    <h1><a href="/home/">BD</a></h1>
                                    <p>Bandes dessinées, comics, mangas… </p>
                                </div>

                            </div>

                        </div>


                        <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">

                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>

                        </button>


                    </div>

                    <div id="navbarCollapse" class="collapse navbar-collapse navbar-right">

                        <ul class="nav nav-pills">
                            <li class="active"> <a href="/Home"><i class="fas fa-home"></i></a> </li>
                            @*  <li> <a href="/Home/ProductByGenre?genre=MANGA"><h2>Actualités</h2></a> </li>*@
                            <li> <a href="/Home/ProductByGenre?genre=HUMOUR"><h2>Les thématiques</h2></a> </li>


                            <li> <a href="/product"><h2>Produits</h2></a> </li>
                            @*   <li> <a href="compte.html"><i class="fas fa-user-check"></i></a> </li>*@
                            <li> <a href="/Cart/Index"><h2><i class="fas fa-shopping-cart btn btn-danger m-1"></i></h2></a> </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">
                                    <span class="nav-label"><h2>Genres</h2></span> <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu ">
                                    <li><a href="/Home/ProductByGenre?genre=HUMOUR"><h4>HUMOUR</h4></a></li>
                                    <li><a href="/Home/ProductByGenre?genre=AVENTURE"><h4>AVENTURE</h4></a></li>
                                    <li><a href="/Home/ProductByGenre?genre=FANTASTIQUE"><h4>FANTASTIQUE</h4></a></li>
                                    <li><a href="/Home/ProductByGenre?genre=EROTIQUE"><h4>EROTIQUE</h4></a></li>
                                    <li><a href="/Home/ProductByGenre?genre=JEUNESSE"><h4>JEUNESSE</h4></a></li>
                                    <li><a href="/Home/ProductByGenre?genre=SCIENCE FICTION"><h4>SCIENCE FICTION</h4></a></li>
                                    <li><a href="/Home/ProductByGenre?genre=MANGA"><h4>MANGA</h4></a></li>
                                </ul>
                            </li>

                            @if (Request.IsAuthenticated)
                            {
                                using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                                {
                                    @Html.AntiForgeryToken()


                                    <li>
                                        <a href="/Manage/Index">
                                            <h2>@User.Identity.GetUserName()</h2>
                                        </a>
                                    </li>
                                  



                                    <li><a href="javascript:document.getElementById('logoutForm').submit()"><h2>Log out</h2></a></li>

                                }
                            }
                            else
                            {
                                <li><a href="/Account/Register"><h2>Register</h2></a></li>
                                <li><a href="/Account/Login"><h2>Log in</h2></a></li>


                            }

                            @* @Html.Partial("_LoginPartial")*@
                        </ul>
                    </div>

                </div>
            </nav>
        </div>
    </div>






























    <div class="container body-content">
        @RenderBody()

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
